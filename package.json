{
  "name": "css-frameworks-ca",
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom"
  },
  "version": "1.0.0",
  "description": "Test",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "start": "sass --watch src/scss:dist/css & live-server",
    "format": "prettier -w src/**/*.js",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint src/**/*.js --cache --fix",
    "prepare": "husky install",
    "test": "npm run test-unit && test-e2e",
    "test-unit": "jest",
    "test-e2e": "cypress open",
    "test-e2e-report": "cypress run --reporter mochawesome",
    "test-e2e-cli": "cypress run"
  },
  "keywords": [],
  "author": "Noroff",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@eslint/js": "^9.4.0",
    "cypress": "^13.11.0",
    "eslint": "^9.4.0",
    "eslint-plugin-cypress": "^3.3.0",
    "eslint-plugin-jest": "^28.6.0",
    "globals": "^15.4.0",
    "jest": "^29.2.0",
    "live-server": "^1.2.0",
    "prettier": "^3.3.1",
    "sass": "^1.54.8"
  },
  "dependencies": {
    "bootstrap-dark-5": "^1.1.3",
    "husky": "^9.0.11",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "eslint --cache --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  }
}
